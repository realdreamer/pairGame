{
  "env": {
    "es6": true
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "eqeqeq": 0,
    "brace-style": [2, "stroustrup"],
    "eol-last": 0,
    "no-nested-ternary": 1,
    "padded-blocks": [1, "never"],
    "space-before-function-paren": ["error", "always"],
    "space-before-blocks": [1, "always"]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
